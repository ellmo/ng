<!DOCTYPE html>
<html>
<head>
  <title>Ng</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
  <span>
    [ <%= link_to "home", root_path %> |
    <% if user_signed_in? %>
      signed in as
      <%= content_tag :span, :style => "color: #785078;" do %>
        <%= current_user.login %>
      <% end %>
      | <%= link_to "Sign out", destroy_user_session_path, :method => :delete %> ]
    <% else %>
      Not logged in. | 
      <%= link_to "Sign in", new_user_session_path %> |
      <%= link_to "Sign up", new_user_registration_path %> ]
    <% end %>
  </span>
  <span style="float:right;">
    <%= form_tag frontend_search_path, :style => "width: 50%;", :method => :get do %>
      <%= text_field "search", "s", :value => params[:s] %>
      <div>
        <%= button_to "search users", "submit_search" %>
      </div>
    <% end %>
  </span>
</div>

<%= yield %>

</body>
</html>
